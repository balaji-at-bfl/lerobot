<mujoco model="base_scene">
<visual>
        <headlight diffuse="0.7 0.7 0.7" ambient="0 0 0" specular="0 0 0"/>
        <rgba haze="0.15 0.25 0.35 1"/>
        <global azimuth="100" elevation="-10"/>
    </visual>

    <asset>
        <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512" height="3072"/>
    <texture type="2d" name="wooden_plane" file="wooden_floor.png" mark="edge" rgb1="0.2 0.3 0.4" rgb2="0.1 0.2 0.3"
            markrgb="0.8 0.8 0.8" width="300" height="300"/>
    <material name="groundplane" texture="wooden_plane" texuniform="true" texrepeat="5 5" reflectance="0.1"/>  
    <texture type="2d" name="wall_tex" file="rock_wall.png" />
    <material name="wall_mat" texture="wall_tex" texuniform="true" texrepeat="5 5" reflectance="0.2"/>  
</asset>
    <worldbody>
        <light name="head" pos="0 0 5.5" dir="0 0 -1" directional="true" />
       <light name="front" pos="6 0 4" dir="-1 0 -0.5" directional="true" diffuse="0.9 0.9 0.9" specular="0.2 0.2 0.2"/>
       <light name="base_left" pos="-0.5 -0.5 0.2" dir="0 3 -1" directional="true" diffuse="0.9 0.9 0.9" specular="0.2 0.2 0.2"/>
       <light name="left" pos="0 3.5 4" dir="0 -3 -0.5" directional="true" diffuse="0.9 0.9 0.9" specular="0.2 0.2 0.2"/>
       <light name="right" pos="0 -5.5 1" dir="0 3 -0.5" directional="true" diffuse="0.9 0.9 0.9" specular="0.2 0.2 0.2"/> 
       <geom name="floor" size="0 0 0.05" pos="0 0 0" type="plane" material="groundplane" />
        <geom name="wall1" size="5 0.01 2" pos="1 4 2"  type="box" material="wall_mat" />
        <geom name="wall2" size="5 0.01 2" pos="-4 -1 2" euler="0 0 1.57" type="box" material="wall_mat" />
         <geom name="wall3" size="5 0.01 2" pos="1 -6 2"  type="box" material="wall_mat" />
    </worldbody>
</mujoco>